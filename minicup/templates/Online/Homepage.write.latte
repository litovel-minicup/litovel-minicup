<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="{$basePath}/assets/css/online/bootstrap-4.0.0.min.css">

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.15/vue.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>


    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, maximum-scale=1">
    <title>MC 18 online</title>
    <style>
        .events {
            overflow-y: scroll;
            // height: 30vh;
        }

        .team-name {
            font-size: 2em;
        }

        .btn-score {
            padding: 25px;
            font-size: 2.25rem;
        }

        html {
            height: 100%;
            overflow: hidden;
        }

        body {
            height: 100%;
            overflow: auto;
        }

        .players-list {
            overflow-y: scroll;
            max-height: 75vh;
        }

        .player-number {
            font-size: 2rem;
            font-weight: 300;
        }
    </style>
</head>
<body>
<div class="container" id="vue-app">
    <div class="row justify-content-center">
        <div class="col-6 text-right team-name">
            {$match->homeTeam->name}
        </div>
        <div class="col-6 team-name">
            {$match->awayTeam->name}
        </div>
    </div>
    <div class="row mt-2 justify-content-center">
        <code class="col-10 text-center display-4">
            {{ timeFormatted }}
        </code>
        <div class="col-10 text-center display-5">
            {{ halfIndex + 1  }}. poločas
        </div>
    </div>
    <div class="row mt-2 justify-content-center">
        <div class="col-10 text-center display-4">
            {{ score[0] || '-' }} : {{ score[1] || '-' }}
        </div>
    </div>

    <hr class="hr">

    <div class="row justify-content-between">
        <div class="col-6 text-right display-4">
            <button class="btn btn-primary btn-block btn-lg btn-score" data-toggle="modal"
                    data-target="#modalHomePlayers">
                +1
            </button>
        </div>
        <div class="col-6 display-4">
            <button class="btn btn-warning btn-block btn-lg btn-score" data-toggle="modal"
                    data-target="#modalAwayPlayers">
                +1
            </button>
        </div>
    </div>

    <hr class="hr">
    <div class="row mt-4 justify-content-center">
        <div class="col-12">
            <div class="events">
                <ul class="list-group">
                    <li v-for="event in events" class="list-group-item d-flex justify-content-between align-items-center">
                        {{ event.message }}
                        <button type="button" class="btn btn-danger"><span class="close">&times;</span></button>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modalHomePlayers" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{$match->homeTeam->name}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body players-list">
                    <ul class="list-group">
                        {foreach $match->homeTeam->players as $player}
                            <li class="list-group-item d-flex align-items-center justify-content-between">
                                <span class="d-flex align-items-center">
                                    <strong class="player-number display-4 text-right mr-2">
                                        {$player->number|padLeft:2, '0'}
                                    </strong>
                                    <strong class="mr-2">
                                        {$player->surname|upper}
                                    </strong> {$player->name}
                                </span>

                                <button v-on:click="goal({$player->id})" type="button" class="btn btn-success">⚽
                                </button>
                            </li>
                        {/foreach}
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">zavřít</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalAwayPlayers" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{$match->awayTeam->name}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body players-list">
                    <ul class="list-group">
                        {foreach $match->awayTeam->players as $player}
                            <li class="list-group-item d-flex align-items-center justify-content-between">
                                <span class="d-flex align-items-center">
                                    <strong class="player-number display-4 text-right mr-2">
                                        {$player->number|padLeft:2, '0'}
                                    </strong>
                                    <strong class="mr-2">
                                        {$player->surname|upper}
                                    </strong> {$player->name}
                                </span>

                                <button v-on:click="goal({$player->id})" type="button" class="btn btn-success">⚽
                                </button>
                            </li>
                        {/foreach}
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">zavřít</button>
                </div>
            </div>
        </div>
    </div>

</div>
<script src="{$basePath}/assets/js/online/main.js">
</script>
<script>

    initialize({$match->id});
</script>
</body>
</html>