                    <a n:href="Gallery:default"><li>foto</li></a>
                    <a href=""><li>tabulky</li></a>
                    <a href=""><li>týmy</li></a>
                    <a href=""><li>sponzoři</li></a>
                </ul>
            </div>
        </div>

        <div class="Section">
            {block content}
            {/block}
        </div>

        {control asideComponent}

        <div class="Footer">
            {control loginForm}
        </div>    

{/block}
