{block content}
    {ifset $category}
	    <h3>Seznam zápasů pro kategorii {$category->name}</h3>
        {control listOfMatchesComponent-$category->slug}
    {else}
        {foreach $categories as $category}
            <h3>Seznam zápasů pro kategorii {$category->name}</h3>
	            {control listOfMatchesComponent-$category->slug}
	    {/foreach}
    {/ifset}
{/block}
