<form n:name="loginForm" class="form-signin">
    <h2 class="form-signin-heading">Přihlášení do administrace</h2>
    <div n:if="$form->getErrors()">
        <div n:foreach="$form->getErrors() as $error" class="alert alert-danger">{$error}</div>
    </div>
    {input username class=>form-control}
    {input password class=>form-control}
    {label remember class=>checkbox}
    {input remember}
    {/label}
    {input submit class=>"btn btn-lg btn-primary btn-block"}
</form>