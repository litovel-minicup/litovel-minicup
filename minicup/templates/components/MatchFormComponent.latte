<div class="component" n:snippet>
    {form matchForm}
    {foreach $form['matches']->getContainers() as $id => $_match}
        {formContainer $match}
            <div class="row">
                <div class="col-md-3 col-md-push-2 col-md-pull-1 text-right">
                    {label $_match['scoreHome'] class=>"input-label"/}
                </div>
                <div class="col-md-3 col-md-push-4">
                    {label $_match['scoreAway'] class=>"input-label"/}
                </div>
            </div>
            <div class="row" style="margin-bottom: 25px;">
                <div class="col-md-3 col-md-push-2">
                    {input $_match['scoreHome'] class=>"form-control text-right"}
                </div>
                <div class="col-md-2 col-md-push-2">
                    {input $_match['time'] class=>"form-control text-center"}
                </div>
                <div class="col-md-3 col-md-push-2">
                    {input $_match['scoreAway'] class=>"form-control"}
                </div>
            </div>
        {/formContainer}
    {/foreach}
        <div class="row" n:if="!$control[matchForm][matches]->isEmpty()">
            <div class="col-md-3 col-md-push-9">
                <input type="submit" class="btn btn-primary btn-success btn-lg" value="odeslat" n:name=submit>
                {input $form['matches']['addMatch'] class => "btn btn-info ajax"}
            </div>
        </div>
    {/form}
</div>

