services:
    authorizator:
        class: Nette\Security\Permission
        setup:
            - addRole('guest')
            - addRole('moderator', 'guest')
            - addRole('admin', 'moderator')

            - addResource('users') # TODO resources
            - addResource('online')

            - allow('moderator', 'users', 'view')
            - allow('moderator', 'online', 'write')
            - allow('admin')