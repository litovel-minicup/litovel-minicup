{block body}
    {ifset $category}
	    <h3>Seznam týmů pro kategorii {$category->name}</h3>
        {control listOfTeamsComponent $category}
    {else}
        {foreach $categories as $category}
            <h3>Seznam týmů pro kategorii {$category->name}</h3>
	            {control listOfTeamsComponent $category}
	    {/foreach}
    {/ifset}
{/block}

{block teams}
<ul n:inner-foreach="$category->teams as $team">
	<li><a n:href="detail $category, $team">{$team->name}</a></li>
</ul>
{/block}